{
    "name": "panlatent/craft-annotations",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "panlatent\\craft\\annotations\\": "src/"
        }
    },
    "authors": [
        {
            "name": "panlatent",
            "email": "panlatent@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0.2"
    },
    "require-dev": {
        "jetbrains/phpstorm-attributes": "^1.0",
        "craftcms/cms": "^4.0|^5.0"
    },
    "suggest": {
        "craftcms/cms": "Required to use annotations in Craft CMS."
    },
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}
